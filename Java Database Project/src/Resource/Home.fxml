<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="700" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WebMart.HomeController">
   <children>
      <TabPane fx:id="homeTabs" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab fx:id="customersTab" text="Customers">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                      <Button fx:id="updateCustomer" layoutX="72.0" layoutY="399.0" mnemonicParsing="false" onAction="#submitCustomers" text="Submit to Database" />
                        <TableView fx:id="customerTable" layoutX="244.0" layoutY="-60.0" prefHeight="371.0" prefWidth="456.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
                          <columns>
                            <TableColumn fx:id="customerId" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="customerFirst" onEditCommit="#changeFirstNameCustomer" prefWidth="75.0" text="First Name" />
                              <TableColumn fx:id="customerLast" onEditCommit="#changeLastNameCustomer" prefWidth="82.0" text="Last Name" />
                              <TableColumn fx:id="customerPhone" onEditCommit="#changePhoneCustomer" prefWidth="86.00003051757812" text="Phone" />
                              <TableColumn fx:id="customerEmail" onEditCommit="#changeEmailCustomer" prefWidth="128.0" text="Email" />
                          </columns>
                        </TableView>
                        <Label fx:id="generateIdLbl" layoutX="105.0" layoutY="94.0" prefHeight="27.0" prefWidth="115.0" style="-fx-background-color: white;" textAlignment="CENTER">
                           <font>
                              <Font size="18.0" />
                           </font></Label>
                        <Button fx:id="generateId" layoutX="17.0" layoutY="95.0" mnemonicParsing="false" onAction="#generateIdCustomer" text="Generate ID:" />
                        <VBox alignment="CENTER" layoutX="32.0" layoutY="135.0" prefHeight="227.0" prefWidth="199.0" spacing="30.0">
                           <children>
                              <TextField fx:id="c_firstName" promptText="First Name" />
                              <TextField fx:id="c_lastName" promptText="Last Name" />
                              <TextField fx:id="c_phoneNumber" promptText="Phone Number" />
                              <TextField fx:id="c_email" promptText="Email" />
                              <Button fx:id="insertCustomer" mnemonicParsing="false" onAction="#addCustomer" text="Add New Customer" />
                           </children>
                        </VBox>
                        <Label fx:id="updateLbl" layoutX="58.0" layoutY="424.0" prefHeight="35.0" prefWidth="161.0" textAlignment="CENTER" />
                        <Label fx:id="messageLbl" layoutX="18.0" layoutY="40.0" prefHeight="53.0" prefWidth="289.0" text="Please enter in these fields to add a customer record." />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="employeesTab" text="Employees">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="employeeTable" layoutX="387.0" layoutY="235.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
                          <columns>
                            <TableColumn fx:id="employeeId" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="password" onEditCommit="#changePasswordEmployee" prefWidth="75.0" text="Password" />
                              <TableColumn fx:id="employeeFirst" onEditCommit="#changeFirstNameEmployee" prefWidth="75.0" text="First Name" />
                              <TableColumn fx:id="employeeLast" onEditCommit="#changeLastNameEmployee" prefWidth="75.0" text="Last Name" />
                              <TableColumn fx:id="employeePhone" onEditCommit="#changePhoneEmployee" prefWidth="75.0" text="Phone" />
                              <TableColumn fx:id="employeeEmail" onEditCommit="#changeEmailEmployee" prefWidth="120.0" text="Email" />
                          </columns>
                        </TableView>
                     </children></AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="inventoryTab" text="Inventory">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="inventoryTable" layoutX="439.0" layoutY="235.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="225.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
                          <columns>
                            <TableColumn fx:id="productCode" prefWidth="85.33329772949219" text="Code" />
                            <TableColumn fx:id="category" prefWidth="106.0" text="Category" />
                              <TableColumn fx:id="name" prefWidth="138.00003051757812" text="Name" />
                              <TableColumn fx:id="price" prefWidth="66.6666259765625" text="Price" />
                              <TableColumn fx:id="stock" prefWidth="75.3333740234375" text="Amount" />
                          </columns>
                        </TableView>
                     </children></AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
